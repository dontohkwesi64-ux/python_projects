generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  name     String
  role     String
}

model Job {
  id          String   @id @default(uuid())
  title       String
  description String
  postedBy    String
}
